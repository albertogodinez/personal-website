---
import { getCollection } from 'astro:content';
import FavoritesCollectionHandler from '../components/FavoritesCollectionHandler';
import { SelectionHandler } from '../components/SelectionHandler';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
const favoritesCollection = await getCollection('favorites');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main>
      <SelectionHandler client:load />
      <section>
        <FavoritesCollectionHandler favoritesCollection={favoritesCollection} client:load />
      </section>
    </main>
    <Footer />
  </body>
</html>
