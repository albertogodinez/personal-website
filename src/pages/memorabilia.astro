---
import { getCollection } from 'astro:content';
import FavoritesCollectionHandler from '../components/FavoritesCollectionHandler';
import { SelectionHandler } from '../components/SelectionHandler';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const favoritesCollection = await getCollection('favorites');

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="memorabilia-body">
    <SelectionHandler client:load />
    <section>
      <FavoritesCollectionHandler favoritesCollection={favoritesCollection} client:load />
    </section>
  </body>
  <Footer />
</html>
