<style>
  /* CSS Reset */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }


  /* grid code */
  :root {
    font-size: 18px;s: 5;
    --grid-min-width: 250px;
    --grid-gap: 2.5rem;

    --spacing: 2rem;
    --spacing-half: 1rem;
    --spacing-double: 4rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(min(100%, max(var(--grid-min-width), 100% / calc(var(--grid-columns) + 1))), 1fr)
    );
    gap: var(--grid-gap);
  }

  .grid[data-columns] {
    /* define */
    &[data-columns='1'] {
      --grid-columns: 1;
    }
    &[data-columns='2'] {
      --grid-columns: 2;
    }
    &[data-columns='3'] {
      --grid-columns: 3;
    }
    &[data-columns='4'] {
      --grid-columns: 4;
    }
    &[data-columns='5'] {
      --grid-columns: 5;
    }
    &[data-columns='6'] {
      --grid-columns: 6;
    }
    /* apply */
    grid-template-columns: repeat(
      auto-fit,
      minmax(min(100%, max(var(--grid-min-width), 100% / calc(var(--grid-columns) + 1))), 1fr)
    );
  }

  /* TODO: Add this in the future */
