---
import GridLayout from '../layouts/GridLayout.astro';
---

<GridLayout title="welcome" />

<style is:global>
  /* CSS Reset 
  inspired by https://www.joshwcomeau.com/css/custom-css-reset/
  */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  #root,
  #__next {
    isolation: isolate;
  }

  body {
    &::before {
      width: 100%;
      display: block;
      content: '';
      height: 0.1rem;
      position: absolute;
      top: 0;
      left: 0;
    }
  }
</style>
